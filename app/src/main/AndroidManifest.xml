<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tangyang.fribbble">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".FribbbleApplicatioin">




        <activity android:name=".view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.MainActivity"/>

        <activity
            android:name=".dribbble.Auth.AuthActivity"
            android:windowSoftInputMode="adjustPan">
        </activity>

        <activity android:name=".view.shot_detail.ShotActivity"/>
        <activity android:name=".view.bucket_list.ChooseBucketActivity"/>
        <activity android:name=".view.bucket_list.BucketShotListActivity"/>

    </application>

</manifest>